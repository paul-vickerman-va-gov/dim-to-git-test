	<dependencies>
    	<dependency>
    		<groupId>gov.va.vba.css</groupId>
			<artifactId>css-webservice</artifactId>
			<version>1.0.7-0</version>
			<type>war</type>
    	</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<earName>css-service-${project.version}</earName>
					<packagingExcludes>
						**/ojdbc6-11.2.0.4.0.jar,
						**/spring*4.3.5*.jar
					</packagingExcludes>	
           	 		<archive>
                    	<manifest>
                        	<addClasspath>true</addClasspath>
                        	<addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
                  			<addDefaultImplementationEntries>false</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
					<modules>
						<webModule>
							<groupId>gov.va.vba.css</groupId>
    	  					<artifactId>css-webservice</artifactId>
							<contextRoot>/css-webservices</contextRoot>
						</webModule>
					</modules>
					<earSourceDirectory>${project.build.outputDirectory}</earSourceDirectory>
					<resources>
						<resource>
							<directory>src/main/resources</directory>
							<filtering>true</filtering>
						</resource>
					</resources>
				</configuration>
			</plugin>
			
